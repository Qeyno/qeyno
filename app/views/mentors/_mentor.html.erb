<li>
  Mentor
  <%= gravatar_for mentor, size: 52 %>
  <%= link_to mentor.name, mentor %>
  <% if current_user.admin? && !current_user?(mentor) %>
    | <%= link_to "delete", mentor, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
   <div>
   <% if mentor.goal %> Goal: <%= mentor.goal %> <% end %>
  </div>
   <div>
   <% if mentor.interest %> Interest: <%= mentor.interest %> <% end %>
  </div>
</li>