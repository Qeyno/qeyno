<li>
  Mentee
  <%= gravatar_for mentee, size: 52 %>
  <%= link_to mentee.name, mentee %>
  <% if current_user.admin? && !current_user?(mentee) %>
    | <%= link_to "delete", mentee, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
  <div>
   <% if mentee.goal %> Goal: <%= mentee.goal %> <% end %>
  </div>
   <div>
   <% if mentee.interest %> Interest: <%= mentee.interest %> <% end %>
  </div>
</li>