<% if signed_in? %>
	<div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div> 
<% else %>

<div class="center hero-unit">
  <h1>Welcome to Qeyno</h1>

  <h2>
    <%= link_to image_tag("qeyno.jpg", alt: "Rails"), 'http://launch.qeyno.com/' %>
    <br>
    Qeyno is where Khan Academy meets LinkedIN for Students (13-17) - Gamified Career Discovery for Kids.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %> 